<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/colorAccent"
              android:gravity="center"
              tools:context=".activity.MenuActivity">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
                android:id="@+id/title_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@color/design_default_color_primary_dark" />

        <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="28dp"
                android:text="@string/app_name"
                android:textColor="@android:color/background_light"
                android:textSize="24sp" />
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="40sp"/>
        <ImageView
                android:layout_width="173dp"
                android:layout_height="75dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_catpicture"
                android:contentDescription="@string/cat_image"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_catfoot"
                    android:id="@+id/imageView"
                    android:contentDescription="@string/cat_image"
                    android:gravity="center"
                    android:layout_marginStart="212dp"
                    android:layout_alignParentTop="true" android:layout_marginTop="3dp"
                    android:layout_alignParentStart="true"/>
            <Button
                    android:id="@+id/findacat_button"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:text="@string/find_a_cat_button_text"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/imageView" android:layout_marginLeft="56dp"
                    android:layout_alignParentTop="true" android:layout_marginEnd="222dp"
                    android:layout_marginTop="5dp"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_catfoot"
                    android:id="@+id/imageView1"
                    android:contentDescription="@string/cat_image"

                    android:layout_marginStart="200dp"
                    android:layout_alignParentTop="true" android:layout_marginTop="0dp"
                    android:layout_alignParentStart="true"/>
            <Button
                    android:id="@+id/favourite_cats_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:text="@string/favourite_cats_button_text"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/imageView1" android:layout_marginLeft="-76dp"
                    android:layout_alignParentTop="true" android:layout_marginEnd="181dp"
                    android:layout_marginTop="0dp"/>
        </RelativeLayout>
        <TextView
                android:id="@+id/cat_facts_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>